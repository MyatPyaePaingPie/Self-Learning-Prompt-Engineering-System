# Environment Configuration for Secure Authentication
# Copy this to .env and fill in your actual values

# JWT Secret Key - CRITICAL: Generate a strong, unique secret key for production!
# You can generate one using: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/your_database_name

# API Configuration
API_HOST=localhost
API_PORT=8000

# Security Settings
JWT_EXPIRATION_HOURS=24
PASSWORD_MIN_LENGTH=6

# Development vs Production
ENVIRONMENT=development  # development | production

# CORS Settings (if needed)
ALLOWED_ORIGINS=http://localhost:8501,http://localhost:3000