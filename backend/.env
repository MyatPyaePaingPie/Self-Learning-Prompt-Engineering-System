# Security Keys - CHANGE THESE IN PRODUCTION
SECRET_KEY=ultra-secure-authentication-system-secret-key-2025-change-in-production-env-32-chars-minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./auth_system.db

# CORS Configuration
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# Application-Layer Encryption
ENCRYPTION_ENABLED=true
ENCRYPTION_SALT=secure_salt_change_in_prod

# Rate Limiting
RATE_LIMIT_ENABLED=true
LOGIN_RATE_LIMIT=5/minute
REGISTER_RATE_LIMIT=3/minute
ENHANCE_RATE_LIMIT=10/minute

# Security Headers
SECURITY_HEADERS_ENABLED=true
TRUSTED_HOSTS=localhost,127.0.0.1,*.localhost

# Session Security
SESSION_TIMEOUT_MINUTES=30
STRONG_PASSWORD_REQUIRED=true